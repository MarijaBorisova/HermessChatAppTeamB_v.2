@{
    ViewData["Title"] = "Home Page";
}
 
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<style>

	body {
		background-image: url("");
		background-size: cover;
		background-color: #F0F8FF;
	}

</style>
<div class="text-center">
	<h1 class="display-2"> Welcome  <l>to Hermes Chat</l></h1>
	<style>

		h1 {
			color: darkolivegreen;
			font-family: Castellar;
			padding-top: 40px;
		}

	</style>
	<h2 class="display-4"> Talking the talk is a good first  start.</h2>
	<style>

		h2 {
			color: darkolivegreen;
			font-family: 'Brush Script MT';
			padding: 60px;
		}

	</style>
	<div class="row">
		<div class="col-0">
			<hr />
		</div>
	</div>
	<div class="row">
		<div class="col-6">
			<ul id="messagesList"></ul>
		</div>

	</div>
</div>

<style>
	.hovercolor:hover {
		background-color: white;
		color: black;
	}

</style>
<div class="text-center">
	<div class="row">
		<div class="col-3 offset-3">
			<!-- 3 col platumā --> <!-- offset 3 tukšas sākumā -->


			<a button="nav-link text-dark" class="btn btn-primary mr-5 ml-5 btn-small hovercolor text-align:center"
			   style="font-size: 2rem; width:10rem;border-radius: 10px; background: purple;"
			   asp-area="Identity" asp-page="/Account/Register">Register</a>
		</div>
		<!-- btn bootstrap clse pogām -  btn-primary krāsa,   mr-5 right atstarpe pa labi no elementa,

		btn-lg bootstrap klase lielākai pogai  -->

		<div class="col-3">
			<a button="nav-link text-dark" class="btn btn-primary ml-5 mr-5 btn-small hovercolor text-align:center;"
			   style="font-size: 2rem; width:10rem; border-radius: 10px;background: purple;"
			   asp-area="Identity" asp-page="/Account/Login">Login</a>

		</div>
	</div>
</div>




<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
 
@if(User.Identity.IsAuthenticated)
{
    <p>@User.Identity.Name</p>
 
    <form method="post" asp-controller="Account" asp-action="Logout">
        <input type="submit" value="Sign Out" />
    </form>
}
else
{
    <a asp-controller="Account" asp-action="Login">Login</a>
    <a asp-controller="Account" asp-action="Register">Register</a>
}